.device-container{
  flex-direction: column;
  display:flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.device-author-date{
  margin: 10rpx 0 20rpx 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.device-author-date image{
  width: 60rpx;
  height: 60rpx;
}

.device-author-date text{
  margin-left: 20px;
}

.device-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.device-date{
  font-size: 26rpx;
  margin-bottom: 10px;
}

.device-title{
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.device-content{
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.device-like{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
  align-items: center;
}

.device-like image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
}

.device-like text{
  margin-right: 20px;
}