@import "device-tpl/device-tpl.wxss";

.container{
  flex-direction: column;
  display:flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 1rpx;
  padding-top: 40rpx;
}

swiper{
  width: 100%;
  height: 400rpx;
}

swiper image{
  width: 100%;
  height: 400rpx;
}

.recommendlist{
  /* margin: 10rpx 0 20rpx 10px; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 15rpx;
  /* background-color: lightgray; */
}

.device-recommend{
  font-size: 40rpx;
  margin-left: 10rpx;
}

.device-category {
  background-color: #f2f4f6;
  padding-top: 10px;
  padding-left: 20px;
  padding-bottom: 20rpx
}
.img-category {
  width: 20px;
  height: 20px;
}
.tz-search {
  background-color: #f2f4f6;
  padding-top: 10px;
  padding-right: 25px;
  padding-left: 10px;
}
.weui-search-bar__label {
  text-align: left;
  left: 10px;
}
.weui-search-bar__label{
  border-radius: 100px;
}
.weui-search-bar__form {
  border-radius: 100px;
}

.device-list-more-label {
  font-size: 14px;
  
}
.device-list-more-label {
  color: rgb(104, 104, 104);
